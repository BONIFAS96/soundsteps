# Backend Environment Variables
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=sqlite:./soundsteps.db
# For PostgreSQL: postgresql://username:password@localhost:5432/soundsteps

# JWT Authentication  
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Africa's Talking API
AT_USERNAME=projectsoundsteps
AT_API_KEY=your-africa-talking-api-key
AT_VOICE_NUMBER=your-voice-number
AT_USSD_CODE=*123*456#

# Webhook URLs (set after ngrok)
BASE_URL=https://your-ngrok-url.ngrok-free.app

# File Upload (Optional - for audio lessons)
AWS_S3_BUCKET=soundsteps-audio
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1

# Or use local file storage
UPLOAD_DIR=./uploads